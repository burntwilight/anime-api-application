<!DOCTYPE html>
<html lang="en">
<head>
    <title>Anime-Go</title>
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mukta:wght@400;800&family=Poppins&display=swap" rel="stylesheet">
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container header">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-4">Anime-Go</span>
      </a>

      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="nav-link active" aria-current="page">Home</a></li>
        <li class="nav-item"><a href="/" class="nav-link">About</a></li>
      </ul>
    </header>
  </div>
  <div class="container">
        <h1>
            <% if (locals.animeName){ %>
            <%= animeName %>
            <% }; %>
        </h1>
        <div class="center-img">
          <% if (locals.animeImage) { %>
          <img class="kenburns-top" src="<%= animeImage %>" alt="anime image">
          <% }; %>
        </div>
        <div class="ul-container">
          <% if (locals.categoryFullList) { %>
          <ul class="text-center list-group">
              <% for (let i = 0; i < categoryFullList.length; i++) { %>
              <li class="list-group-item"><%= categoryFullList[i] %></li>
              <% } %>
          </ul>
          <% } %>
        </div>
    <div>
          <p class="mt-3 mb-3"> <% if(locals.animeDescription){ %>
            <%= animeDescription %>
            <% }; %>
          </p>
    </div>
    <div class="pb-3">
      <div class="mt-3 d-flex justify-content-center">
        <form action="/submit" method="POST">
          <input type="text" name="category" placeholder="Category/Genre">
          <input type="submit" value="Search">
        </form>
      </div>
      <div class="mt-3 d-flex justify-content-center">
        <form action="/random" method="GET">
          <input type="submit" value="Randomize">
        </form>
      </div>
      </div>
      <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
          <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
              <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
            </a>
            <span class="mb-3 mb-md-0 text-body-secondary">Â© 2023</span>
          </div>
      
          <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
            <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
            <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
          </ul>
        </footer>
      </div>
    </div>
    <!-- BOOTSTRAP SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>